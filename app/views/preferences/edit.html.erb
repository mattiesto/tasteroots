<!-- Validation failure messages -->
<% if @preference.errors.any? %>
  <% @preference.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Preference #<%= @preference.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_preference/<%= @preference.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for taste -->
      <div class="form-group">
        <label for="taste" class="control-label">
          Taste
        </label>

        <input type="text" id="taste" name="taste" placeholder="Taste" class="form-control" value="<%= @preference.taste %>">
      </div>

      <!-- Label and input for style -->
      <div class="form-group">
        <label for="style" class="control-label">
          Style
        </label>

        <input type="text" id="style" name="style" placeholder="Style" class="form-control" value="<%= @preference.style %>">
      </div>

      <!-- Label and input for gender -->
      <div class="form-group">
        <label for="gender" class="control-label">
          Gender
        </label>

        <input type="text" id="gender" name="gender" placeholder="Gender" class="form-control" value="<%= @preference.gender %>">
      </div>

      <button class="btn btn-warning">
        Update Preference
      </button>
      or
      <a href="/preferences/<%= @preference.id %>">Cancel</a>
    </form>
  </div>
</div>
