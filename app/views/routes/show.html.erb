<div class="page-header">
  <h3>Route #<%= @route.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>City</dt>
      <dd>
        <% if @route.city.present? %>
        <a href="/cities/<%= @route.city_id %>">
          <%= @route.city.name %>
        </a>
        <% end %>
      </dd>

      <dt>Preference</dt>
      <dd>
        <% if @route.preference.present? %>
        <a href="/preferences/<%= @route.preference_id %>">
          <%= @route.preference.id %>
        </a>
        <% end %>
      </dd>

      <dt>Taste</dt>
      <dd>
        <% if @route.preference.present? %>
        <a href="/preferences/<%= @route.preference_id %>">
          <%= @route.preference.taste %>
        </a>
        <% end %>
      </dd>

      <dt>Style</dt>
      <dd>
        <% if @route.preference.present? %>
        <a href="/preferences/<%= @route.preference_id %>">
          <%= @route.preference.style %>
        </a>
        <% end %>
      </dd>

      <dt>Gender</dt>
      <dd>
        <% if @route.preference.present? %>
        <a href="/preferences/<%= @route.preference_id %>">
          <%= @route.preference.gender %>
        </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/routes" class="btn btn-primary">
        Back
      </a>
      <a href="/routes/<%= @route.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_route/<%= @route.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<div>
  <iframe width="300" height="300" frameborder="0" style="border:0"
  src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDqaq9-EBexFNuhZwpgM8YO08mytn9lO08&q=33,33"
  allowfullscreen>
</iframe>
</div>
