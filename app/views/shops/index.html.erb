<div class="page-header">
  <h1>
    Shops
    <a href="/shops/new" class="btn btn-lg btn-success">New Shop</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>City</th>
        <th>Preference</th>
        <th>Actions</th>
      </tr>

      <% @shops.each do |shop| %>
      <tr>
        <td>
          <% if shop.name.present? %>
          <a href="/shops/<%= shop.id %>"><%= shop.name %></a>
          <% end %>
        </td>
        <td>
          <% if shop.city.present? %>
          <a href="/cities/<%= shop.city.id %>">
            <%= shop.city.name %>
          </a>
          <% end %>
        </td>
        <td>
          <% if shop.preference.present? %>
          <a href="/preferences/<%= shop.preference.id %>">
            <%= shop.preference.style %>
          </a>
          <% end %>
        </td>
        <td>
          <a href="/shops/<%= shop.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_shop/<%= shop.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @shops, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
